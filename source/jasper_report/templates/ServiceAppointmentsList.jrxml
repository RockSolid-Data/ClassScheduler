<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="service_appointments_list"
              pageWidth="595" pageHeight="842" columnWidth="555"
              leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20"
              uuid="c6afc9d1-3b56-4c02-9d7e-2c7f3fef2a10">

    <!-- Parameters -->
    <parameter name="start_date" class="java.util.Date"/>
    <parameter name="end_date" class="java.util.Date"/>
    <parameter name="title" class="java.lang.String"/>

    <!-- Query -->
    <queryString>
        <![CDATA[
SELECT
    service_apt_id,
    name,
    phone_number,
    email,
    appointment_date,
    appointment_time,
    notes
FROM class_scheduler_admin.serviceappointment
WHERE appointment_date BETWEEN $P{start_date} AND $P{end_date}
ORDER BY appointment_date, appointment_time
        ]]>
    </queryString>

    <!-- Fields -->
    <field name="service_apt_id" class="java.lang.Integer"/>
    <field name="name" class="java.lang.String"/>
    <field name="phone_number" class="java.lang.String"/>
    <field name="email" class="java.lang.String"/>
    <field name="appointment_date" class="java.util.Date"/>
    <field name="appointment_time" class="java.sql.Time"/>
    <field name="notes" class="java.lang.String"/>

    <!-- Title -->
    <title>
        <band height="40">
            <textField>
                <reportElement x="0" y="0" width="555" height="30"/>
                <textElement textAlignment="Center">
                    <font size="14" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{title}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Column Headers -->
    <columnHeader>
        <band height="18">
            <staticText>
                <reportElement x="0" y="0" width="65" height="18"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Appt Date]]></text>
            </staticText>

            <staticText>
                <reportElement x="65" y="0" width="50" height="18"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Time]]></text>
            </staticText>

            <staticText>
                <reportElement x="115" y="0" width="30" height="18"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[ID]]></text>
            </staticText>

            <staticText>
                <reportElement x="145" y="0" width="120" height="18"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Name]]></text>
            </staticText>

            <staticText>
                <reportElement x="265" y="0" width="80" height="18"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Phone]]></text>
            </staticText>

            <staticText>
                <reportElement x="345" y="0" width="120" height="18"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Email]]></text>
            </staticText>

            <staticText>
                <reportElement x="465" y="0" width="90" height="18"/>
                <textElement textAlignment="Center">
                    <font isBold="true"/>
                </textElement>
                <text><![CDATA[Notes]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail rows -->
    <detail>
        <band height="18">
            <!-- Appt Date -->
            <textField pattern="yyyy-MM-dd">
                <reportElement x="0" y="0" width="65" height="18"/>
                <textFieldExpression><![CDATA[$F{appointment_date}]]></textFieldExpression>
            </textField>

            <!-- Appt Time -->
            <textField pattern="HH:mm">
                <reportElement x="65" y="0" width="50" height="18"/>
                <textFieldExpression><![CDATA[$F{appointment_time}]]></textFieldExpression>
            </textField>

            <!-- ID -->
            <textField>
                <reportElement x="115" y="0" width="30" height="18"/>
                <textElement textAlignment="Center"/>
                <textFieldExpression><![CDATA[$F{service_apt_id}]]></textFieldExpression>
            </textField>

            <!-- Name -->
            <textField>
                <reportElement x="145" y="0" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{name}]]></textFieldExpression>
            </textField>

            <!-- Phone -->
            <textField>
                <reportElement x="265" y="0" width="80" height="18"/>
                <textFieldExpression><![CDATA[$F{phone_number}]]></textFieldExpression>
            </textField>

            <!-- Email -->
            <textField>
                <reportElement x="345" y="0" width="120" height="18"/>
                <textFieldExpression><![CDATA[$F{email}]]></textFieldExpression>
            </textField>

            <!-- Notes -->
            <textField isStretchWithOverflow="true">
                <reportElement x="465" y="0" width="90" height="18"/>
                <textFieldExpression><![CDATA[$F{notes}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

</jasperReport>
